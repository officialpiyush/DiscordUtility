{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": true,
        "declaration": true,
        "esModuleInterop": true,
        "strict": true, 
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
    },
    "include": [
        "src"
    ],
    "typedocOptions": {
        "name": "discordutility",
        "readme": "README.md",
        "out": "docs"
    }
}